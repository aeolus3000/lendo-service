{
  "openapi": "3.0.0",
  "info": {
    "version": "0.0.1",
    "title": "Lendo Enterprise Services",
    "description": "Exercise description if we end up hosting everything.\n",
    "x-logo": {
      "url": "https://cdn.lendo.se/v4/svg/logodark.svg",
      "altText": "Lendo Logo"
    }
  },
  "servers": [
    {
      "url": "https://localhost:8000/"
    }
  ],
  "tags": [
    {
      "name": "Applications",
      "description": "An application is the most important part of our domain. It represents the intent of a customer to get a loan."
    },
    {
      "name": "Jobs",
      "description": "A job is used for retrieving the status of a certain application.  Jobs are needed as not all our partners answer immediately."
    }
  ],
  "paths": {
    "/api/applications": {
      "post": {
        "tags": [
          "Applications"
        ],
        "summary": "Create an application",
        "operationId": "createApplication",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateApplication"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "accepted operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApplicationResponse"
                }
              }
            }
          },
          "400": {
            "description": "duplicate application id.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/jobs": {
      "get": {
        "tags": [
          "Jobs"
        ],
        "summary": "Get job by application ID",
        "operationId": "getJob",
        "parameters": [
          {
            "name": "application_id",
            "in": "query",
            "description": "ID of the application",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "job retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/JobResponse"
                }
              }
            }
          },
          "400": {
            "description": "failed to get job, the application id was not provided / not a valid UUID",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/JobError"
                }
              }
            }
          },
          "404": {
            "description": "failed to get the job, the application id doesn't exist",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Job404Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreateApplication": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "example": "372c3849-a01b-4eb3-8c18-6f32f0b588ef"
          },
          "first_name": {
            "type": "string",
            "example": "John"
          },
          "last_name": {
            "type": "string",
            "example": "Doe"
          }
        },
        "required": [
          "id",
          "first_name",
          "last_name"
        ]
      },
      "ApplicationResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "example": "372c3849-a01b-4eb3-8c18-6f32f0b588ef"
          },
          "status": {
            "type": "string",
            "example": "pending"
          },
          "first_name": {
            "type": "string",
            "example": "John"
          },
          "last_name": {
            "type": "string",
            "example": "Doe"
          }
        }
      },
      "JobResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "example": "ef29a441-68a4-4d07-9cf8-206c977b5ab4"
          },
          "application_id": {
            "type": "string",
            "format": "uuid",
            "example": "372c3849-a01b-4eb3-8c18-6f32f0b588ef"
          },
          "status": {
            "type": "string",
            "enum": [
              "completed",
              "rejected"
            ]
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "format": "uuid",
            "example": "the application ID is already used."
          }
        }
      },
      "JobError": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "format": "uuid",
            "example": "application id is missing."
          }
        }
      },
      "Job404Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "format": "uuid",
            "example": "failed to get job, the application_id doesn't exist."
          }
        }
      }
    }
  }
}